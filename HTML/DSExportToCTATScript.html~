<script>
	parseConfig = {
					delimiter: "",	// auto-detect
					newline: "",	// auto-detect
					quoteChar: '"',
					header: false,
					dynamicTyping: false,
					preview: 0,
					encoding: "",
					worker: false,
					comments: false,
					step: function(results, parser) {
							simulateDataStream(results,parser)
						},
					complete: undefined,
					error: undefined,
					download: false,
					skipEmptyLines: false,
					chunk: undefined,
					fastMode: undefined,
					beforeFirstChunk: undefined,
					withCredentials: undefined
				};

	function runSimulation(){
		//update detector list with user-selected values
		//...
		let inputFilePath = null;
		location.search.split(/[?&]/).forEach(function(q) {let NV=q.split(/=/); if(NV.length>1 && NV[0]=="inputFilePath") inputFilePath=NV[1]});
		inputFilePath = (inputFilePath || document.getElementById('fileItem').files[0]);
		console.log(inputFilePath);
		Papa.parse(inputFilePath, parseConfig);
	}

	function changeColor(str){
		document.getElementById(str).style.background='#000000';
	}
</script>

